
<html>
<head>
			<script src="/charts/dist/Chart.bundle.js"></script>
<script src="/charts/samples/utils.js"></script>
</head>
<body>
<div class="col-sm-8">
        <div class="card">
            <div class="body">
                <canvas id="canvas"></canvas>
            </div>
        </div>
    </div>
     <script>

        var config = {
            type: 'line',
            data: {
                labels: [],
                datasets: [{
                    label: 'Pet Owner',
                    backgroundColor: window.chartColors.pink,
                    borderColor: window.chartColors.pink,
                    data: [
                        <% data.forEach(function(i,ctr){ %>
                          
                            <%= i.poCOU+"," %>
                        
                        <% }); %>
                    ],
                    fill: false,
                }, {
                    label: 'Pet',
                    fill: false,
                    backgroundColor: window.chartColors.blue,
                    borderColor: window.chartColors.blue,
                    data: [
                      <% data.forEach(function(i,ctr){ %>
                            <%= i.pCOU+"," %>
                        <% }); %>
                    ],
                }]
            },
            options: {
                responsive: true,
                title: {
                    display: true,
                    text: 'PET AND OWNER REGISTRATION'
                },
                tooltips: {
                    mode: 'index',
                    intersect: false,
                },
                hover: {
                    mode: 'nearest',
                    intersect: true
                },
                scales: {
                    xAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Month'
                        }
                    }],
                    yAxes: [{
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Number of Registration'
                        }
                    }]
                }
            }
        };
        window.onload = function() {
            var ctx = document.getElementById('canvas').getContext('2d');
            window.myLine = new Chart(ctx, config);
            
           
        };

     
    </script>


</body>
</html>