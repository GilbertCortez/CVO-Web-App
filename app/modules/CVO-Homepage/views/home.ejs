<%- include('./header.ejs') -%>
    <!-- END nav -->
    
    <section class="home-slider owl-carousel">
      <div class="slider-item" style="background-image: url('/websitePart/images/bg_12.jpg');">
        <div class="overlay"></div>
        <div class="container">
          <div class="row slider-text align-items-center">
            <div class="col-md-7 col-sm-12 ftco-animate">
              <p>The <strong><a href="#">City Veterinary Office</a></strong> aims to have a</p>
              <h1 class="mb-3">Rabies Free City!</h1>
            </div>
          </div>
        </div>
      </div>
    </section>
