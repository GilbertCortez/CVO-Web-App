<script>
   function validate(){
      var toSubmit=true;
      [0,1,2,3,4,5,6,7].forEach(function(i){
         var currname=("noc").concat(i);
         document.getElementsByName(currname)[0].value=="" ? toSubmit=false : "" ;
      });

      toSubmit==true? 
      swal({
            title: "Confirmation?",
            text: "Do you want to update Nature of Collection",
            icon: "info",
            buttons: true,
            
        })
        .then((willDelete) => {
            if (willDelete) {
               document.getElementById('update_validation').submit()
            }
        })
       : "";

   }
</script>
