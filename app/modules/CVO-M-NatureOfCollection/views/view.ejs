<script>
   function format(el) {

     el.value =  el.value.replace(/[^\d]/g,'').replace(/(\d\d?)$/,'.$1');
     if(el.value.trim()===""){
          $('#'+el.name+'_line').addClass("error");
          document.getElementById('required-'+el.name).style.display="block"
     }
     else{
         $('#'+el.name+'_line').removeClass("error");
          document.getElementById('required-'+el.name).style.display="none"
     }
   }
</script>
