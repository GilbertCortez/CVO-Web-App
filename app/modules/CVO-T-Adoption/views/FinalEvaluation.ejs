                <div class="col-sm-9">
                
                    <div class="card" style="min-height: 600px">
                        
                        <div class="body">
                  <h4>ADOPTION APPLICATION FINAL EVALUATION FORM</h4>
                  <hr>
                  <form action='/CVO_Adoption/FinalEvaluation' method="POST" id="finalEvaluationForm">
                   <input type="hidden" name="adopterId" value="<%= adopterDetails.AdopterId %>">
            <input type="hidden" name="adopterType" value="<%= adopterDetails.AdopterType %>">
             <input type="hidden" name="transactionId" value="<%= adopterDetails.TransactionId %>">
                  <label class="form-label">Date and Time of Evaluation <font color="red">*</font></label>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="datetime-local" class="form-control" name="dtmFinalEvaluation" id="dtmFinalEvaluation" >
                                    </div>
                                </div> 
                                <script>
                              function zeroPadded(val) {
                                if (val >= 10)
                                  return val;
                                else
                                  return '0' + val;
                              }
                              var d = new Date();
                               document.getElementById('dtmFinalEvaluation').value = (d.getFullYear()+"-"+zeroPadded(d.getMonth() + 1)+"-"+zeroPadded(d.getDate())+"T"+d.getHours()+":"+d.getMinutes()+":"+d.getSeconds());
                                </script>
                                <label class="form-label">Brainy Brownee's Evaluation</label>
                                <div class='col-sm-12'>
                                  <div class="col-sm-6">
                                 <font color="green"> <p id="sysResult"> </p></font>
                                      
                                  </div>
                                   <div class="col-sm-6">
                                   <font color="green"><p id="sysAccuracy">Accuracy Rate: </p></font>
                                  
                                  </div>
                                  <script>
                                   
                                      $.post('/CVO_Adoption/systemEvaluation',{id1: <%= adopterDetails.AdopterId %>,id2:  <%= adopterDetails.AdopterType %> },function(sysData){
                                       document.getElementById('sysResult').innerHTML="Result: "+(sysData.pc==0?"APPROVED":"DISAPPROVED") ;
                                       document.getElementById('sysAccuracy').innerHTML="Accuracy Rate: "+(sysData.acc*100).toFixed(2)+"%";
                                      });
                                  
                                  </script>

                                </div>
                  <br>
                                       <label class="form-label">Adoption Application Result <font color="red">*</font></label>
                                <div class="input-group input-group-lg">
                  <span class="input-group-addon">
                  <input name="result" type="radio" value=0 id="forYes" checked="">
                  <label for="forYes">Approved</label>
                  </span>
                  <span class="input-group-addon">
                  <input name="result" type="radio" value=1 id="forNo" >
                  <label for="forNo">Disapproved</label>
                  </span>
                  
               </div>

                                 <label class="form-label">Evaluation Remarks <font color="red">*</font></label>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <textarea rows="5" class="form-control" name="remarks" autofocus=""></textarea>
                                    </div>
                                </div> </form>
                                     <br>
