<%- include('../../../templates/CVO-Head-Location.ejs') -%>
<script>
document.getElementById("adoption_list").className="active";
document.getElementById("transaction_list").className="active";

</script>

  <div class="row clearfix">

          <div class="col-sm-3">
             <div class="card bg-white" style="min-height: 600px">
             <div class="body">
                <center><h3>ADOPTION APPLICATION INTERVIEW</h3></center><hr><br><br><br>
              <%- include('./modal/personalinfo.ejs') -%>
              <%- include('./modal/adoptionapplication.ejs') -%>
                
               
             </div>
             </div>

          </div>
                <div class="col-sm-9">
                
                    <div class="card" style="min-height: 600px">
                        
                        <div class="body">
                  <h4>ADOPTION APPLICATION INTERVIEW FORM</h4>
                  <hr>
                  <form action='/CVO_Adoption/Interview' method="POST" id="interviewForm">
                   <input type="hidden" name="adopterId" value="<%= adopterDetails.AdopterId %>">
            <input type="hidden" name="adopterType" value="<%= adopterDetails.AdopterType %>">
             <input type="hidden" name="transactionId" value="<%= adopterDetails.TransactionId %>">
                  <label class="form-label">Date and Time of Interview <font color="red">*</font></label>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <input type="datetime-local" class="form-control" name="dtmInterview" id="dtmInterview" >
                                    </div>
                                </div> 
                                  <script>
                              function zeroPadded(val) {
                                if (val >= 10)
                                  return val;
                                else
                                  return '0' + val;
                              }
                              var d = new Date();
                               document.getElementById('dtmInterview').value = (d.getFullYear()+"-"+zeroPadded(d.getMonth() + 1)+"-"+zeroPadded(d.getDate())+"T"+d.getHours()+":"+d.getMinutes()+":"+d.getSeconds());
                                </script>
                                 <label class="form-label">Interview Remarks <font color="red">*</font></label>
                                <div class="form-group form-float">
                                    <div class="form-line">
                                        <textarea rows="10" class="form-control" name="interviewRemarks" autofocus=""></textarea>
                                    </div>
                                </div> 
                             <label class="form-label">Is the Adoption Application needs to include Home Visit? <font color="red">*</font></label>
                                <div class="input-group input-group-lg">
                  <span class="input-group-addon">
                  <input name="homevisit" type="radio" value=0 id="forYes">
                  <label for="forYes">Yes</label>
                  </span>
                  <span class="input-group-addon">
                  <input name="homevisit" type="radio" value=1 id="forNo" checked="">
                  <label for="forNo">No</label>
                  </span>
                  
               </div>
               </form>
               <br>
                     <div class="col-sm-9"></div>
                     <div class="col-sm-3">
                     
                             <a type="button" class="btn btn-primary btn-lg waves-effect" onclick="proceed();">PROCEED</a>
                                &nbsp;<a href="/CVO_Adoption" type="button" class="btn btn-link waves-effect">CANCEL</a>
                      </div>
                </div>
            </div>
            </div>
            </div>


<script>

function proceed(){

   swal({
                 title: "SUBMIT INTERVIEW FORM?",
                 icon: "/images/alert_question.png",
                 buttons: {
                   yes: "YES",
                   cancel: "CANCEL",

  
                 },
              closeOnClickOutside: false,
                  width: '800px',
               })
               .then((decision) => {
                 if (decision==="yes") {
                     document.getElementById('interviewForm').submit();
                 }
                
                 else if(decision==="cancel"){
                swal.close()
                 }
               
               })
               
}
           
              

</script>
