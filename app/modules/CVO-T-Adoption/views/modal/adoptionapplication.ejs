<a class="btn  btn-block bg-blue" onclick="$('#adoptionapplication  ').modal('toggle');"><i class="material-icons">assignment</i><h6> VIEW ADOPTION APPLICATION FORM</h6></a><br>
                <div class="modal fade" id="adoptionapplication" tabindex="-1" role="dialog" >
                 <div class="modal-dialog modal-lg" role="document"  >
                    <div class="modal-content">
                   
                       <div class="modal-body" style="min-height:300px">
                       <h4><center>ADOPTION APPLICATION FORM</center></h4>
                        <table class="table table-striped table-bordered">
                            <tr>
                              <th colspan="2" class="bg-blue"><center>INCOME INFORMATION</center></th>
                            </tr>

                            <tr>
                              <th>Occupation</th>
                              <td id="aaf_Modal1"></td>
                            </tr>

                             <tr>
                              <th>Monthly Income</th>
                              <td id="aaf_Modal2"></td>
                            </tr>

                             <tr>
                              <th>Source of Income</th>
                              <td id="aaf_Modal3"></td>
                            </tr>

                            <tr>
                              <th colspan="2" class="bg-blue"><center>HOUSEHOLD INFORMATION</center></th>
                            </tr>

                             <tr>
                              <th>Number of Children</th>
                              <td id="aaf_Modal4"></td>
                            </tr>

                             <tr>
                              <th>Number of Teenagers</th>
                              <td id="aaf_Modal5"></td>
                            </tr>

                               <tr>
                              <th>Number of Youth</th>
                              <td id="aaf_Modal6"></td>
                            </tr>

                             <tr>
                              <th>Number of Adult</th>
                              <td id="aaf_Modal7"></td>
                            </tr>

                             <tr>
                              <th colspan="2" class="bg-blue"><center>PET HISTORY</center></th>
                            </tr>

                             <tr>
                              <th>Current Number of Dogs</th>
                              <td id="aaf_Modal8"></td>
                            </tr>

                             <tr>
                              <th>Current Number of Cats</th>
                              <td id="aaf_Modal9"></td>
                            </tr>

                            <tr>
                              <th>Euthanized Pet?</th>
                              <td id="aaf_Modal10"></td>
                            </tr>

                             <tr>
                              <th>Surrendered Pet?</th>
                              <td id="aaf_Modal11"></td>
                            </tr>

                            <tr>
                              <th>Lost Pet?</th>
                              <td id="aaf_Modal12"></td>
                            </tr>

                             <tr>
                              <th colspan="2" class="bg-blue"><center>ADOPTION SPECIFIC QUESTIONS</center></th>
                            </tr>

                              <tr>
                              <th>Reason for Adoption</th>
                              <td id="aaf_Modal13"></td>
                            </tr>

                            <tr>
                              <th>Home Description</th>
                              <td id="aaf_Modal14"></td>
                            </tr>

                            <tr>
                              <th>Can Ensure Pet Indoor?</th>
                              <td id="aaf_Modal15"></td>
                            </tr>


                        </table>
                       </div>
                       <div class="modal-footer">
                        
                          <a class="btn btn-link waves-effect" data-dismiss="modal">CLOSE</a>
                       </div>
                    </div>
                 </div>
              </div>


<script>
  $.post('/CVO_Adoption/getAdoptionApplication',{id1: <%= adopterDetails.AdopterId %>,id2:  <%= adopterDetails.AdopterType %> },function(data){
      //OCCUPATION
      if(data[0].int_Occupation==0){
        $('#aaf_Modal1').text("Employed Full Time");
      }
      else if(data[0].int_Occupation==1){
        $('#aaf_Modal1').text("Employed Part Time");
      }
      else if(data[0].int_Occupation==2){
        $('#aaf_Modal1').text("Unemployed");
      }
      else if(data[0].int_Occupation==3){
        $('#aaf_Modal1').text("Retired");
      }
      else if(data[0].int_Occupation==4){
        $('#aaf_Modal1').text("Student");
      }
      else if(data[0].int_Occupation==5){
        $('#aaf_Modal1').text(data[0].str_OtherOccupation);
      }  

      //MONTHLY INCOME
       if(data[0].int_MonthlyIncome==0){
        $('#aaf_Modal2').text("less than 5,000");
      }
      else if(data[0].int_MonthlyIncome==1){
        $('#aaf_Modal2').text("5,001 to 10,000");
      }
      else if(data[0].int_MonthlyIncome==2){
        $('#aaf_Modal2').text("10,001 to 20,000");
      }
      else if(data[0].int_MonthlyIncome==3){
        $('#aaf_Modal2').text("20,001 to 40,000");
      }
      else if(data[0].int_MonthlyIncome==4){
        $('#aaf_Modal2').text("40,001 to 50,000");
      }
      else if(data[0].int_MonthlyIncome==5){
        $('#aaf_Modal2').text("50,001 above");
      }
      //SOURCE OF INCOME
      if(data[0].int_SourceOfIncome==0){
        $('#aaf_Modal3').text("Work Salary and Wages");
      }
      else if(data[0].int_SourceOfIncome==1){
        $('#aaf_Modal3').text("Business Net Income");
      }
      else if(data[0].int_SourceOfIncome==2){
        $('#aaf_Modal3').text("Family Support");
      }
      else if(data[0].int_SourceOfIncome==3){
        $('#aaf_Modal3').text("Unemployment Compensation");
      }
      else if(data[0].int_SourceOfIncome==4){
        $('#aaf_Modal3').text(data[0].str_OtherSourceOfIncome);
      }
      $('#aaf_Modal4').text(data[0].int_NoOfChildren);
      $('#aaf_Modal5').text(data[0].int_NoOfTeenagers);
      $('#aaf_Modal6').text(data[0].int_NoOfYouth);
      $('#aaf_Modal7').text(data[0].int_NoOfAdult);
      $('#aaf_Modal8').text(data[0].int_NoOfDogs);
      $('#aaf_Modal9').text(data[0].int_NoOfCats);
      $('#aaf_Modal10').text(data[0].int_PetEuthanize==0?"YES":"NO");
      $('#aaf_Modal11').text(data[0].int_SurrenderPet==0?"YES":"NO");
      $('#aaf_Modal12').text(data[0].int_LostPet==0?"YES":"NO");
      $('#aaf_Modal13').text(data[0].str_ReasonForAdoption);
      $('#aaf_Modal14').text(data[0].str_HomeDescription);
      $('#aaf_Modal15').text(data[0].int_EnsurePetIndoor==0?"YES":"NO");
  });
</script>