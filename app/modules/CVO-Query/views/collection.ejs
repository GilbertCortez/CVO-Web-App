<%- include('../../../templates/CVO-Head-Location.ejs') -%>
<script>
   document.getElementById("query_list").className="active";
   document.getElementById("collection_q").className="active";
    document.title="Collection";
</script>
<div class="">
   <div class="block-header" >
      <h2>
         COLLECTION
      </h2>
   </div>
   <div class="col-sm-12">
      <div class="card" style="min-height: 200px">
         <div class="body">   

            <h4>Query Type</h4>
            <hr>
            <center>
            <div class="demo-radio-button" >
               <input name="querytype" type="radio" class="with-gap radio-col-blue" value="1"  id="unconstrained" checked="" >
               <label for="unconstrained">Unconstrained</label>
               <input name="querytype" type="radio" class="with-gap radio-col-blue" value="2" id="constrained" >
               <label for="constrained">Constrained</label>
            </div>
            </center>
            <h4>Date Range</h4>
            <hr>
            <div class="col-sm-6">
            <label class="form-label">Start Date</label>
            <div class="form-group form-float">
               <div class="form-line">
                  <input type="date" class="form-control">
               </div>
            </div>
            </div>
            
            <div class="col-sm-6">
            <label class="form-label">End Date</label>
            <div class="form-group form-float">
               <div class="form-line">
                  <input type="date" class="form-control">
               </div>
            </div>
            </div>
            <h4>Nature of Collection</h4>
                <hr>
                <center>
                <div class="demo-radio-button" >
                    <input name="collection" type="radio" class="with-gap radio-col-blue" value="1"  id="ownerregistration" checked="" >
                    <label for="ownerregistration">Pet Owner Registration</label>
                    <input name="collection" type="radio" class="with-gap radio-col-blue" value="2" id="petregistration" >
                    <label for="petregistration">Pet Registration</label>
                    <input name="collection" type="radio" class="with-gap radio-col-blue" value="3" id="vaccination" >
                    <label for="vaccination">Vaccination</label>
                    <input name="collection" type="radio" class="with-gap radio-col-blue" value="3" id="redemption" >
                    <label for="redemption">Redemption</label>
                    <input name="collection" type="radio" class="with-gap radio-col-blue" value="3" id="adoption" >
                    <label for="adoption">Adoption</label>
                    <input name="collection" type="radio" class="with-gap radio-col-blue" value="3" id="certification" >
                    <label for="certification">Certification</label>
                    <input name="collection" type="radio" class="with-gap radio-col-blue" value="3" id="transfer" >
                    <label for="transfer">Transfer of Pet Ownership</label>
                    <input name="collection" type="radio" class="with-gap radio-col-blue" value="3" id="all" >
                    <label for="all">All</label>
                 </div>
                </center>
            <br>
         </div>
         <div class="footer">
               <center>
                  <a class="btn bg-blue waves-effect">APPLY</a>
               </center>
         </div>
         <br>
      </div>
   </div>
   <div class="col-sm-12">
        <div class="card" style="min-height: 200px">
           <div class="body">
              <label class="form-label">EXPORT COLLECTION LIST</label>
              <div class="body">
                 <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                       <thead>
                          <tr>
                           <th>Payment ID</th>
                           <th>Date of Payment</th>
                           <th>OR Number</th>
                           <th>Payor</th>
                           <th>Payor Type</th>
                           <th>Nature of Collection</th>
                           <th>Amount</th>
                           <th>Status</th>
                        </tr>
                     </thead>
                     <tbody>
                         <% collection.forEach(function (i) { %>
                        <% function MMMMDDYYYY(i){

                         var days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
                         var months = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
                         var now = new Date(i);
                         return months[now.getMonth()] + ' ' + now.getDate() + ', ' + now.getFullYear();
                        
                       }
                            %>
                        <tr>
                           <td><%=i.int_PaymentId%></td>
                           <td><%=MMMMDDYYYY(i.dat_DateOfPayment)%></td>
                           <td><%=i.str_ORNumber%></td>
                           <% var payor = i.str_PetOwnerFirstName+" "+i.str_PetOwnerMiddleName+" "+i.str_PetOwnerLastName%>
                           <td><%=payor%></td>
                           <% if (i.int_PayorType == 0) { %>
                            <td>Pet Owner</td>
                           <% } else if (i.int_PayorType == 1) { %>
                            <td>Adopter</td>
                            <% } else if (i.int_PayorType == 2) { %>
                            <td>Owner of the lost Pet</td>
                            <% } %>
                           <td><%=i.str_Description%></td>
                           <td><%=i.dec_Amount%></td>
                           <% if (i.int_Status == 0) { %>
                            <td>Unpaid</td>
                           <% } else if (i.int_Status == 1) { %>
                            <td>Paid</td>
                            <% } %>
                        </tr>
                        <% }) %>
                     </tbody>
                  </table>
               </div>
            </div>
            <!-- #END# Exportable Table -->
         </div>
      </div>
   </div>
</div>
<%- include('../../../templates/CVO-Footer-Location.ejs') -%>