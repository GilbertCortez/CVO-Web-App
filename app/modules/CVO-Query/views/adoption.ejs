<%- include('../../../templates/CVO-Head-Location.ejs') -%>
<script>
   document.getElementById("query_list").className="active";
   document.getElementById("adoption_q").className="active";
    document.title="Adopted Animals";
</script>
<div class="">
   <div class="block-header" >
      <h2>
         ADOPTED ANIMALS
      </h2>
   </div>
   <div class="col-sm-12">
      <div class="card" style="min-height: 200px">
         <div class="body">   

            <h4>Query Type</h4>
            <hr>
            <center>
            <div class="demo-radio-button" >
               <input name="querytype" type="radio" class="with-gap radio-col-blue" value="1"  id="unconstrained" checked="" >
               <label for="unconstrained">Unconstrained</label>
               <input name="querytype" type="radio" class="with-gap radio-col-blue" value="2" id="constrained" >
               <label for="constrained">Constrained</label>
            </div>
            </center>
            <h4>Date Range</h4>
            <hr>
            <div class="col-sm-6">
            <label class="form-label">Start Date</label>
            <div class="form-group form-float">
               <div class="form-line">
                  <input type="date" class="form-control">
               </div>
            </div>
            </div>
            
            <div class="col-sm-6">
            <label class="form-label">End Date</label>
            <div class="form-group form-float">
               <div class="form-line">
                  <input type="date" class="form-control">
               </div>
            </div>
            </div>
            <br>
            <h4>Species</h4>
                <hr>
                <div align="center">
                    <div class="col-sm-3"></div>
                <div class="demo-radio-button col-sm-9" align="left" >
                    <input name="species_v" type="radio" class="with-gap radio-col-blue" value="1"  id="dogs_v" checked="" >
                    <label for="dogs">Dogs</label>
                    <input name="species_v" type="radio" class="with-gap radio-col-blue" value="2" id="cats_v" >
                    <label for="cats">Cats</label>
                    <input name="species_v" type="radio" class="with-gap radio-col-blue" value="3" id="all_v" >
                    <label for="all">All</label>
                 </div>
                </div>
            <br>
            <h4>Type of Adopter</h4>
            <hr>
            <center>
            <div class="demo-radio-button" >
                <input name="adopter" type="radio" class="with-gap radio-col-blue" value="1"  id="petowner" checked="" >
                <label for="petowner">Pet Owner</label>
                <input name="adopter" type="radio" class="with-gap radio-col-blue" value="2" id="noncitizen" >
                <label for="noncitizen">Non-Citizen</label>
                <input name="adopter" type="radio" class="with-gap radio-col-blue" value="3" id="all" >
                <label for="all">All</label>
             </div>
            </center>
        <br>
         </div>
         <div class="footer">
               <center>
                  <a class="btn bg-blue waves-effect">APPLY</a>
               </center>
         </div>
         <br>
      </div>
   </div>
   <div class="col-sm-12">
      <div class="card" style="min-height: 200px">
         <div class="body">
            <label class="form-label">EXPORT ADOPTED ANIMALS LIST</label>
            <div class="body">
               <div class="table-responsive">
                  <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                     <thead>
                        <tr>
                           <th>Adoption ID</th>
                           <th>Date & Time of Animal Release</th>
                           <th>Adopter Type</th>
                           <th>Adopter</th>
                           <th>Animal Id</th>
                           <th>Pet Tag number</th>
                           <th>Pet Alias</th>
                           <th>Species</th>
                           <th>Breed</th>
                           <th>Color Pattern</th>
                           <th>Sex</th>
                           <th>Animal Status</th>
                        </tr>
                     </thead>
                     <tbody>
                         <% adoption.forEach(function (i) { %>
                        <% function MMMMDDYYYY(i){

                         var days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
                         var months = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
                         var now = new Date(i);
                         return months[now.getMonth()] + ' ' + now.getDate() + ', ' + now.getFullYear();
                        }
                        %>
                        <tr>
                           <td><%=i.int_AdoptionTransactionId%></td>
                           <td><%=MMMMDDYYYY(i.dtm_DateTimeAnimalReleased)%></td>
                           <td><%=i.int_AdopterType%></td>
                           <td><%=i.Adopter%></td>
                           <td><%=i.int_AnimalId%></td>
                           <td><%=i.str_PetTagNo%></td>
                           <td><%=i.str_Alias%></td>
                           <% if (i.int_AnimalSpecies == 0) { %>
                            <td>Dog</td>
                            <% } else if (i.int_AnimalSpecies == 1) { %>
                            <td>Cat</td>
                            <% } %>
                           <td><%=i.str_BreedName%></td>
                           <td><%=i.str_Description%></td>
                           <% if (i.int_Sex == 0) { %>
                            <td>Male</td>
                            <% } else if (i.int_Sex == 1) { %>
                            <td>Female</td>
                            <% } %>
                           <td>Adopted</td>
                        </tr>
                        <% }); %>
                     </tbody>
                  </table>
               </div>
            </div>
            <!-- #END# Exportable Table -->
         </div>
      </div>
   </div>
</div>
<%- include('../../../templates/CVO-Footer-Location.ejs') -%>