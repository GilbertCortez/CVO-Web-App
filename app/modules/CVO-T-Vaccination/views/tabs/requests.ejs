<script src="PrettifyDate/PrettifyDate.js"></script>
<script>
   function iterateEvaluation(i){
      var e=JSON.parse(i);
      //PET INFORMATION
      document.getElementById('eval_PetTag').value=e.str_PetTagNo;
      document.getElementById('eval_PetName').value=e.str_PetName;
      document.getElementById('eval_PetDateReg').value=MMMMDDYYYY(e.PetDateReg);
      document.getElementById('eval_Birthday').value=MMMMDDYYYY(e.dat_Birthday);
      document.getElementById('eval_Sex').value= e.int_Sex==0 ? "Male" : "Female";
      document.getElementById('eval_Species').value= e.int_AnimalSpecies==0 ? "Dog" : "Cat";
      document.getElementById('eval_Breed').value=e.str_BreedName;
      document.getElementById('eval_ColorPattern').value=e.str_Description;
      document.getElementById('eval_PetPic').src="Pets"+e.str_AnimalPicturePath;
      
      //PET OWNER INFORMATION
      document.getElementById('eval_PetOwnerPic').src="PetOwners"+e.str_PetOwnerPicturePath;
      document.getElementById('eval_PetOwnerId').value=e.int_PetOwnerId;
      document.getElementById('eval_Name').value=e.str_PetOwnerLastName+", "+e.str_PetOwnerFirstName+" "+e.str_PetOwnerMiddleName;
      document.getElementById('eval_PetOwnerDateReg').value=MMMMDDYYYY(e.PetOwnerDateReg);
      document.getElementById('eval_Address').value=e.str_CompleteAddress+"("+e.str_BarangayName+")";
      document.getElementById('eval_PhoneNumber').value=e.str_PhoneNo;
      document.getElementById('eval_Email').value=e.str_Email;

      //VACCINATION CERTIFICATE
      document.getElementById('eval_VaccineCert').src="VaccinationCertificate"+e.str_VaccinationCertificatePicturePath;
   }
</script>