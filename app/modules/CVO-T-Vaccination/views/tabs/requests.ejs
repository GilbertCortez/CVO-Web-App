<div class="table-responsive">
   <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
      <thead>
      
         <tr>
            <th>Pet Tag</th>
            <th>Pet Name</th>
            <th>Pet Owner ID</th>
            <th>Pet Owner Name</th>
            <th>Action</th>
         </tr>
      </thead>
      <tbody>
      <% re.forEach(function(i){ %>
         <tr>
            <td><%= i.str_PetTagNo %></td>
            <td><%= i.str_PetName %></td>
            <td><%= i.int_PetOwnerId %></td>
            <td><%= i.str_PetOwnerLastName+", "+i.str_PetOwnerFirstName+" "+i.str_PetOwnerMiddleName %></td>
            <td>
               <div align="center">
                  <a data-toggle="modal" data-target="#evaluate" onclick="iterateEvaluation('<%= JSON.stringify(i) %>')"><button type="button" class="btn btn-primary waves-effect" data-toggle="tooltip" data-placement="top" title="Record Vaccination">
                  <i class="material-icons">remove_red_eye</i>&nbsp;Evaluate
                  </button>
                  </a>
               </div>
            </td>
         </tr>
         <% }); %>
      </tbody>
   </table>
</div>
