<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header bg-blue">
                            <h2>ADD NEW ANIMAL BREED</h2>
                        </div>
                        <div class="body">
                            <form id="form_breed" method="POST" novalidate="novalidate" action="/CVO_AnimalBreed">
								<label class="form-label">Breed Name</label>
                                <div class="form-group form-float">
                                    <div class="form-line" id="breedname_line">
                                        <input type="text" class="form-control" name="name" required="" onkeypress="breedname_typing()" aria-required="true" id="name">
                                    </div>
                                    <label id="required-breed_name" class="error" style="display: block;">This field is required.</label>
                                </div>

								<label class="form-label">Animal Species</label>

								  <select name="animal" class="form-control show-tick" data-live-search="true">
                                        <option value=0>Dog</option>
                                        <option value=1>Cat</option>
                                  </select>
                                <br><br>
                                <center><button class="btn btn-primary waves-effect" type="button" onclick="validation()">ADD</button></center>
                            </form>
                        </div>
                    </div>
                </div>


				<script>
                    document.getElementById("required-breed_name").style.display = "none";

                    function breedname_typing(){
                        $("#breedname_line").removeClass("error");
                        document.getElementById("required-breed_name").style.display = "none";
                    }

                    function validation(){
                        var toSubmit=true;
                        if(document.getElementById('name').value.trim()==""){
                            toSubmit=false;
                            $('#breedname_line').addClass("error");
                            document.getElementById("required-breed_name").style.display='block';
                        }
                        if(toSubmit==true){
                            swal({
                            title: "Are you sure you want to add new animal breed?",
                            icon: "/images/alert_question.png",
                            buttons: true,
                            })
                            .then((willDelete) => {
                            if (willDelete) {
                                    document.getElementById('form_breed').submit();
                            }
                            });
                        }   
                    }
				</script>
